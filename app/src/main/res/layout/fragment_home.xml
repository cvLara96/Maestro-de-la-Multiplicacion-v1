<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Spinner
        android:id="@+id/spinnerSeleccionAvatar"
        android:layout_width="350dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097"
        tools:layout_editor_absoluteX="30dp" />

    <Spinner
        android:id="@+id/spinnerSeleccionDificultad"
        android:layout_width="129dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513" />

    <TextView
        android:id="@+id/textSeleccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona un avatar"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

    <TextView
        android:id="@+id/textSeleccion2"
        android:layout_width="129dp"
        android:layout_height="75dp"
        android:text="Selecciona dificultad"
        android:textAlignment="center"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426" />

    <TextView
        android:id="@+id/textSeleccion3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona la tabla de multiplicar"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.635" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.358"
        tools:layout_editor_absoluteX="1dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.583"
        tools:layout_editor_absoluteX="1dp" />

    <GridLayout
        android:id="@+id/gridSeleccionTabla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.795">

        <Button
            android:id="@+id/button0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="0"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="0"
            app:layout_row="1"
            app:rippleColor="#0F26ED" />

        <Button
            android:id="@+id/btnInterr"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="5"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="'?'"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="5"
            app:layout_row="2"
            app:rippleColor="#0F26ED" />

        <Button
            android:id="@+id/button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="1"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="1"
            app:layout_row="1"
            app:rippleColor="#0F26ED" />

        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="2"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="2"
            app:layout_row="1"
            app:rippleColor="#0F26ED" />

        <Button
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="3"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="3"
            app:layout_row="1"
            app:rippleColor="#0F26ED" />

        <Button
            android:id="@+id/button4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="4"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="4"
            app:layout_row="1"
            app:rippleColor="#0F26ED" />

        <Button
            android:id="@+id/button5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="5"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="0"
            app:layout_row="2"
            app:rippleColor="#0F26ED" />

        <Button
            android:id="@+id/button6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="6"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="1"
            app:layout_row="2"
            app:rippleColor="#0F26ED" />

        <Button
            android:id="@+id/button7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="7"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="2"
            app:layout_row="2"
            app:rippleColor="#0F26ED" />

        <Button
            android:id="@+id/button8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="8"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="3"
            app:layout_row="2"
            app:rippleColor="#0F26ED" />

        <Button
            android:id="@+id/button9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="9"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="4"
            app:layout_row="2"
            app:rippleColor="#0F26ED" />

    </GridLayout>

    <EditText
        android:id="@+id/editFecha"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:enabled="false"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.517" />

    <Button
        android:id="@+id/btnFecha"
        android:layout_width="129dp"
        android:layout_height="75dp"
        android:backgroundTint="#00BCD4"
        android:text="SeleccionaFecha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426"
        app:rippleColor="#0F26ED"/>

    <TextView
        android:id="@+id/textTablaSeleccionada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridSeleccionTabla"
        app:layout_constraintVertical_bias="0.157" />


</androidx.constraintlayout.widget.ConstraintLayout>