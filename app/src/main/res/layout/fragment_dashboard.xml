            app:layout_row="1"
            app:rippleColor="#0F26ED"/>

        <Button
            android:id="@+id/button3_dashboard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="3"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="3"
            app:layout_row="1"
            app:rippleColor="#0F26ED"/>

        <Button
            android:id="@+id/button4_dashboard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="4"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="4"
            app:layout_row="1"
            app:rippleColor="#0F26ED"/>

        <Button
            android:id="@+id/button5_dashboard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="5"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="0"
            app:layout_row="2"
            app:rippleColor="#0F26ED"/>

        <Button
            android:id="@+id/button6_dashboard"
            android:layout_width="50dp"
            android:layout_height="50dp"
