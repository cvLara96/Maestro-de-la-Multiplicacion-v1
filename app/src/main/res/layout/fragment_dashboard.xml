            android:layout_column="1"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="6"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="1"
            app:layout_row="2"
            app:rippleColor="#0F26ED"/>

        <Button
            android:id="@+id/button7_dashboard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="7"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="2"
            app:layout_row="2"
            app:rippleColor="#0F26ED"/>

        <Button
            android:id="@+id/button8_dashboard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="8"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="3"
            app:layout_row="2"
            app:rippleColor="#0F26ED"/>

        <Button
            android:id="@+id/button9_dashboard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_margin="1dp"
            android:backgroundTint="#00BCD4"
            android:text="9"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_column="4"
            app:layout_row="2"
            app:rippleColor="#0F26ED"/>

    </GridLayout>

    <Button
        android:id="@+id/verificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="Verificar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridPosibleSolucion"
        app:layout_constraintVertical_bias="0.05"
        app:rippleColor="#FFFFFF"/>

    <Button
        android:id="@+id/borrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="Borrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridPosibleSolucion"
        app:layout_constraintVertical_bias="0.05"
        app:rippleColor="#FAFEFF"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="400dp"
        android:layout_height="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.826" />

    <ImageButton
        android:id="@+id/imagePoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:rotation="25"
        android:src="@drawable/gemared2_removebg_preview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.525" />

